{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "plugins": ["unused-imports"],
  "rules": {
    "import/order": ["error", { "alphabetize": { "order": "asc" } }],
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ]
  }
}
